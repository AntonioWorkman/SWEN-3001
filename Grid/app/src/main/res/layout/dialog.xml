<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enter Grid Variables!"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/setNumColumnsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Enter Number of Columns"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/setNumColumns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_style"
        android:ems="10"
        android:gravity="center"
        android:hint="# of Columns"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/setNumRowsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Enter Number of Rows"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/setNumRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_style"
        android:ems="10"
        android:gravity="center"
        android:hint="# of Rows"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="#ffffff" />


    <TextView
        android:id="@+id/dynamicGridTtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Dynamically Set Grid Variables"
        android:textColor="@color/colorPrimary" />

    <SeekBar
        android:id="@+id/dynamicGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:max="50" />


</LinearLayout>