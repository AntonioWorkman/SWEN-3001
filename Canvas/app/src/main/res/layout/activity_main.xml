<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">


    <com.jillandee.canvas.ui.component.DrawingView
        android:id="@+id/main_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/button_bg"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#850000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/canvas_buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#850000"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/main_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#850000"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_fill_bg" />

        <ImageButton
            android:id="@+id/main_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#850000"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_palette" />

        <ImageButton
            android:id="@+id/main_stroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#850000"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_stroke" />

        <ImageButton
            android:id="@+id/select_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#850000"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_shapes"/>

        <ImageButton
            android:id="@+id/main_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#850000"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_undo" />

        <ImageButton
            android:id="@+id/main_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#850000"
            android:padding="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_redo" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




